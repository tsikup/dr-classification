{
    "exp": {
        "name": "inception_v3_dr_classification"
    },
    "model": {
        "loss": "categorical_crossentropy",
        "learning_rate": 0.0001,
        "optimizer": "adam",
        "lr_schedule": "exp",
        "resize_shape": [512,512],
        "input_shape":[512,512,3]
    },
    "trainer": {
        "num_epochs": 20,
        "batch_size": 8,
        "validation_split": 0.25,
        "verbose_training": 1
    },
    "callbacks": {
        "checkpoint_monitor": "val_loss",
        "checkpoint_mode": "auto",
        "checkpoint_save_best_only": true,
        "checkpoint_save_weights_only": true,
        "checkpoint_verbose": true,
        "tensorboard_write_graph": true
    },
    "dataset": {
        "train":"/media/hdd/tsiknakisn/SeeFar/Kaggle/EyePACS/all_data_preprocessed/train/",
        "test":"/media/hdd/tsiknakisn/SeeFar/Kaggle/EyePACS/all_data_preprocessed/test/",
        "class_mode": "categorical",
        "classes": [0,0,1,1,1],
        "_classes_comment": "// classes should be None or [int,int,int,int,int], which is list of 5 integers representing how the 4 initial classes will be merged"
    },
    "devices":{
        "gpus":[
            1
        ],
        "gpu":{
            "id":"2"
        }
    }
}